			form = {
				action: 'https://docs.google.com/forms/d/e/1FAIpQLSc99Mj2zqlAMHEpiT_2l6Adzik8hj04TC3B7eK4NIrFor-_7Q/formResponse',
				name: 'entry.1584016940',
				email: 'entry.1969032943',
				tel: 'entry.1391229494',
				messenger: 'entry.863417891',
				site: 'entry.1053102140',
				comment: 'entry.1981649400',
				type_of_form: 'entry.1954888542',
				price_type: 'entry.1784265609'
			}


	include includes/footer
	<script src="https://apis.google.com/js/api.js"></script>
	script(src='js/script.js?ver=0.002')